@model MVCStok.Models.Entity.TBLURUNLERR
@{
    ViewBag.Title = "UrunEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<form method="post" class="form-group">
    <div>
        <label>Ürün Adı</label>
        <input type="text" class="form-control" name="URUNAD" required=""  maxlength="30" />
    </div>
    <div>
        <label>Markası</label>
        <input type="text" class="form-control" name="MARKA" placeholder="Buraya markayı yazınız." required="" />
    </div>
    <div>
        <label>Kategori Seçiniz</label>
       @Html.DropDownListFor(m => m.TBLKATEGORILER.KATEGORIID, (List<SelectListItem>)ViewBag.dgr, new {@class="form-control"})   @*Bu m'nin içine KATEGORIAD''ı ata. KATEGORIADı dropdownlistin içine çekecek.
                                                                                                                     selecelistitem-> listelenen öğeleri seç demek nereden seçecek viewbagla
                                                                                                                      taşımış olduğumuz dgr komutundan.*@
    </div>
    <div>
        <label>Fiyatı</label>
        <input type="text" class="form-control" name="FIYAT" />
    </div>
    <div>
        <label>Stok Adet</label>
        <input type="text" class="form-control" name="STOK" />
    </div>
    <div style="margin-top:15px">
        <button class="btn btn-info">Ürün Ekle</button>
    </div>
</form>


